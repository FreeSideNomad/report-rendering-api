<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!--
    This file contains suppression rules for the OWASP Dependency Check Maven plugin.
    Use this to suppress false positives or known issues that are not applicable to this project.

    Example suppression:
    <suppress>
        <notes><![CDATA[
        This vulnerability is not applicable because...
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring\-boot\-starter\-.*@.*$</packageUrl>
        <cve>CVE-2023-XXXXX</cve>
    </suppress>
    -->

    <!-- Suppress Spring Boot vulnerabilities that are not applicable in our context -->
    <suppress>
        <notes><![CDATA[
        Spring Boot actuator endpoints are properly secured and only expose health/info endpoints
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring\-boot\-starter\-actuator@.*$</packageUrl>
        <vulnerabilityName>CVE-2023-20883</vulnerabilityName>
    </suppress>

    <!-- Suppress Playwright vulnerabilities in test scope -->
    <suppress>
        <notes><![CDATA[
        Playwright is only used for PDF generation in controlled environment
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.microsoft\.playwright/playwright@.*$</packageUrl>
        <vulnerabilityName regex="true">.*</vulnerabilityName>
    </suppress>
</suppressions>